{
	"name": "taro-ad-fields",
	"version": "1.0.0",
	"description": "Gulp task for Taro Ad Fields",
	"main": "index.js",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"test": "RESULT=${PWD##*/} && wp-env run tests-cli ./wp-content/plugins/$RESULT/vendor/bin/phpunit -c ./wp-content/plugins/$RESULT/phpunit.xml.dist",
		"start": "wp-env start",
		"update": "wp-env start --update",
		"stop": "wp-env stop",
		"env": "wp-env",
		"cli": "wp-env run cli wp",
		"cli:test": "wp-env run tests-cli wp",
		"dump": "grab-deps dump assets",
		"build": "npm run build:js && npm run build:css && npm run dump",
		"build:js": "grab-deps js src/js assets/js",
		"build:css": "sass ./src/scss/:./assets/css/ --style=compressed && postcss ./assets/css/**/*.css --replace",
		"lint:css": "wp-scripts lint-style './src/scss/**/*.scss'",
		"lint:js": "wp-scripts lint-js './src/js/**/*.js'",
		"lint": "npm run lint:css && npm run lint:js",
		"format:css": "stylelint \"src/scss/**/*.scss\" --fix",
		"format:js": "eslint --fix 'src/js/**/*.js'",
		"watch": "npm-watch"
	},
	"repository": {
		"type": "git",
		"url": ""
	},
	"keywords": [],
	"author": "",
	"license": "GPL-3.0",
	"bugs": {
		"url": ""
	},
	"homepage": "",
	"devDependencies": {
		"@kunoichi/grab-deps": "^2.0.2",
		"@wordpress/env": "^10.2.0",
		"@wordpress/scripts": "^27.9.0",
		"@wordpress/stylelint-config": "^23.22.0",
		"cssnano": "^7.0.6",
		"npm-watch": "^0.13.0",
		"postcss-cli": "^11.0.0"
	},
	"volta": {
		"node": "18.20.3"
	},
	"watch": {
		"build:js": {
			"extensions": "js",
			"patterns": [
				"src/js"
			]
		},
		"lint:js": {
			"extensions": "js",
			"patterns": [
				"src/js"
			]
		},
		"build:css": {
			"extensions": "scss",
			"patterns": [
				"src/scss"
			]
		},
		"lint:css": {
			"extensions": "scss",
			"patterns": [
				"src/scss"
			]
		},
		"dump": {
			"extensions": "js,css",
			"patterns": [
				"assets/js",
				"assets/css"
			]
		}
	}
}
